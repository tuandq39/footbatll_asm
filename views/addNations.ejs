<style>

body {
        margin: 0;
	background: linear-gradient(45deg, #49a09d, #5f2c82);
	font-family: sans-serif;
	font-weight: 100;
    }
    .container-form{
    
        max-width: 600px;
        margin: 100px auto;
        background: #fff;
        border-radius: 8px;
        padding: 20px;
    
}

.container-form  textarea{
    width: 100%;
    border: none;
    background: #E8E8E8;
    padding: 10px 15px;
    height: 20%;
    border-radius: 5px 5px 0px 0px;
    border-bottom: 2px solid #016BA8;
    transition: all 0.5s;
    margin-top: 15px;
    margin-bottom: 15px;
    color: black;
}

.update, .delete {
    text-decoration: none;
    color: #fff;
   /* display: block;
   background: red;
   width: 50px;
   */
}

.buttons{
    display: flex;
    justify-content: space-around ;
}

.action{
    text-align: center;
}

.container-form input {
    width: 100%;
    border: none;
    background-color: #E8E8E8;
    padding: 10px 15px;
    margin-top: 10px;
    margin-bottom: 10px;
}

.createBtn {       
    background: linear-gradient( #49a09d, #5f2c82 );
    background-size: 200% 100%;
    border: none;
        border-radius: 6px;
    color: white;

    cursor: pointer;
    font-size: 16px;
    font-weight: 670;
    line-height: 24px;
    overflow: hidden;
    padding: 12px 24px;
    position: relative;
    text-decoration: none;
    text-align: center;
    margin: 0 auto;
}

.controlBtn{
    display: flex;
    justify-content: center;
}

h1{
    text-align: center;
    background: -webkit-linear-gradient(#49a09d, #5f2c82);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}
</style>


<%- include('header'); -%>

<div class="container-form">
    <h1>Create a Nation</h1>
    <form method="post" action="/nations/addNation" >
        <div class="field is-horizontal">
            <div class="field-label is-normal">
            <label class="label">Name</label>
            </div>
            <div class="field-body">
            <div class="field">
                <div class="control">
                <input class="input is-info" name="nationName" type="text" required>
                </div>
            </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-normal">
            <label class="label">Description</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                    <textarea  class="input is-info" name="description" type="text" required ></textarea>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-body">
            <div class="field">
                <div class="controlBtn">
                <button class="createBtn" type="submit" >
                    Create
                </button>
                </div>
            </div>
            </div>
        </div>
    </form>
</div>
